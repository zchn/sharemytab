{
	"name" : "Broadcast Your Presentation!",
	"version" : "0.0.1",
	"manifest_version" : 2,
	"description" : "Broadcast Your Presentation!",
	"background": {
		"scripts": ["socket.io.js", "RTCPeerConnection-v1.5.js", "broadcast.js", "broadcaster.js", "background.js"],
		"persistent": false
	},
	"page_action" : {
		"default_icon" : "images/tabCapture22.png",
		"default_title" : "Share this tab!",
                "default_popup" : "popup.html"
	},
	"icons" : {
		"16" : "images/tabCapture16.png",
		"22" : "images/tabCapture22.png",
		"32" : "images/tabCapture32.png",
		"48" : "images/tabCapture48.png",
		"128": "images/tabCapture128.png"
	},
	"permissions": [
		"tabs", "tabCapture", "contextMenus"
	],
	"web_accessible_resources": [
		"images/tabCapture48.png"
	]
}
